<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    	xmlns:gap = "http://phonegap.com/ns/1.0"
    	id        = "com.payan.app"
    	version   = "2.8">
    	<name>App</name>
    	<description>App para payan.no-ip.org</description>
    	<author href="https://payan.no-ip.org" email="rene@payan.no-ip.org">Rene Payan Tellez</author>
	<gap:plugin name="org.apache.cordova.console" />
	<gap:plugin name="org.apache.cordova.device" />
	<gap:plugin name="org.apache.cordova.dialogs" />
	<gap:plugin name="org.apache.cordova.file" />
	<gap:plugin name="org.apache.cordova.inappbrowser" />
	<gap:plugin name="org.apache.cordova.media" />
	<gap:plugin name="org.apache.cordova.splashscreen" />
	<gap:plugin name="cordova-plugin-whitelist" source="npm" />
	<access origin="*"/>
	<feature name="http://api.phonegap.com/1.0/network" />
	<allow-intent href="http://*/*/*/*" />
	<allow-intent href="https://*/*/*/*" />
	<allow-intent href="https://payan.no-ip.org/*/*/*" />
	<allow-intent href="*://*.payan.no-ip.org/*" />
	<gap:platforms>
	        <gap:platform name="android"/>
	        <gap:platform name="webos"/>
        	<gap:platform name="symbian.wrt"/>
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>
	<platform name="android">
    	<preference name="AndroidLaunchMode" value="singleTop"/>
	    	<preference name="android-minSdkVersion" value="8" />
    		<icon src="res/android/xhdpi.png" />
    		<icon src="res/android/ldpi.png" density="ldpi" />
    		<icon src="res/android/mdpi.png" density="mdpi" />
    		<icon src="res/android/hdpi.png" density="hdpi" />
    		<icon src="res/android/xhdpi.png" density="xhdpi" />
	</platform>
	<feature name="http://api.phonegap.com/1.0/device"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/media"/>
	<feature name="http://api.phonegap.com/1.0/network"/>
	<feature name="http://api.phonegap.com/1.0/notification"/>
	<allow-intent href="*" />
	<icon src="icon.png" />
	<splash src="icon.png"/>
	</widget>
